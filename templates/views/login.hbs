<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Wetter App</title>
    <link rel="stylesheet" href="style.css"></link>
</head>
<body>

    <!-- Login Formular -->
    <div class="login-container">
        <h2>Login</h2>
        <form id="loginForm">
            <input class="input" type="text" id="loginUsername" placeholder="Username">
            <input class="input" type="password" id="loginPassword" placeholder="Password">
            <!-- Entfernt: onclick="login()" -->
            <button class="btn" type="button" id="loginBtn">Login</button>
        </form>
    </div>

    <!-- Registrierung Formular -->
    <div class="register-container">
        <h2>Registrierung</h2>
        <form id="registerForm">
            <input class="input" type="text" id="registerUsername" placeholder="Username">
            <input class="input" type="password" id="registerPassword" placeholder="Password">
            <!-- Entfernt: onclick="register()" -->
            <button class="btn" type="button" id="registerBtn">Registrieren</button>
        </form>
    </div>

    <!-- Das Skript sollte im öffentlichen Verzeichnis liegen, zum Beispiel in einem "js"-Ordner -->
    <script src="../../src/app.mjs" type="module"></script>
    <script>
        // Das hier ist Ihr neues Inline-Skript zum Hinzufügen von Event-Listenern
        document.getElementById("loginBtn").addEventListener('click', login);
        document.getElementById("registerBtn").addEventListener('click', register);
    </script>
</body>
</html>
